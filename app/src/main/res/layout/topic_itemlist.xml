<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/topic_background_shape">

    <TextView
        android:id="@+id/tv_topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_head_background_shape"
        android:paddingLeft="10dp"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        android:text="#厦门大学"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/topic_head_shape"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="话题"
        android:textColor="@color/topic_background"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_topic_title1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/head_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_name" />

    <TextView
        android:id="@+id/tv_topic_content1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineHeight="18dp"
        android:maxLines="2"
        android:text="我明白我离你还很遥远\n非常遥远"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/img_topic_title1"
        app:layout_constraintTop_toBottomOf="@id/img_topic_title1" />

    <ImageView
        android:id="@+id/img_topic_title2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/head_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_content1" />

    <TextView
        android:id="@+id/tv_topic_content2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineHeight="18dp"
        android:maxLines="2"
        android:text="我明白我离你还很遥远\n非常遥远"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/img_topic_title2"
        app:layout_constraintTop_toBottomOf="@id/img_topic_title2" />

    <ImageView
        android:id="@+id/img_topic_title3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/head_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_content2" />

    <TextView
        android:id="@+id/tv_topic_content3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lineHeight="18dp"
        android:maxLines="2"
        android:text="我明白我离你还很遥远\n非常遥远"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/img_topic_title3"
        app:layout_constraintTop_toBottomOf="@id/img_topic_title3" />

    <TextView
        android:id="@+id/topic_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/topic_foot_shape"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="查看更多"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_content3" />
</androidx.constraintlayout.widget.ConstraintLayout>