<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="40dp"
    android:background="@color/white"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/img_top1"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/top1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_top2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_top2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/top2"
        app:layout_constraintBottom_toBottomOf="@id/img_top1"
        app:layout_constraintLeft_toRightOf="@id/img_top1"
        app:layout_constraintRight_toLeftOf="@id/img_top3" />

    <ImageView
        android:id="@+id/img_top3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/top3"
        app:layout_constraintLeft_toRightOf="@id/img_top2"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="@id/img_top2" />

</androidx.constraintlayout.widget.ConstraintLayout>